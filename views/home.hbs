<script>
  var mainCodeTabElements = document.querySelectorAll('.main__code-tab')

  mainCodeTabElements.forEach((mainCodeTabEl) => {
    mainCodeTabEl.addEventListener('click', function () {
      var activeTab = this
      var root = activeTab.parentNode.parentNode
      var snippets = root.querySelectorAll('.main__code-snippet')
      var activeSnippet = document.getElementById(activeTab.getAttribute('data-target'))

      for (var i = 0; i < activeTab.parentNode.children.length; i++) {
        activeTab.parentNode.children[i].classList.remove('active')
      }

      snippets.forEach((snippet) => {
        snippet.classList.remove('active')
      })

      activeTab.classList.add('active')
      activeSnippet.classList.add('active')
    })
  })
</script>
